pipeline {
    agent any
    environment {
        name = 'malik'
    }
    Parameter {
        string(name: 'person', defaultValue: 'sarfraj', description: "who are you?")
    }

    stages {
        stage('run a commands') {
            steps {
                sh '''
                ls
                date
                pwd
                '''
            
            }
        }
        
        stage('Environment Variable') {
            steps {
                sh 'echo "$BUILD_ID"'
                sh 'echo "$name"'
                
            }
        }
        
        stage('Environment Variables') {
            environment {
                username = 'myname'
            }
            
            steps {
                sh 'echo "$username"'
                sh 'echo "$name"'
            
            
            }
        }
        
        stage('Parameter') {
     
            steps {
                sh 'echo "$person"'
                
            
            }    
        }
    }
}
